{
    "swagger": "2.0",
    "info":
    {
        "version": "V1",
        "title": " My Fundoo App",
        "description": "Created some notes and did some CRUD operation"
    },

    "host": "localhost:3000",
    "basePath": "/api/v1/",
    "tags": [
        {
            "name": "Express-CLI",
            "description": "Here is my Fundoo App Replica"
        }
    ],
    
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],

    "paths": {
        "/users/register": {
            "post": {
                "tags": ["User Api's"],
                "description": "Signing UP User...",
                "parameters": [
                    {
                        "name": "SignUP",
                        "in": "body",
                        "description": "Details of User",
                        "schema": {
                            "$ref": "#/definitions/SignUP"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "New user is created"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        
        "/users/login": {
            "post": {
                "tags": ["User Api's"],
                "description": "login user...",
                "parameters": [
                    {
                        "name": "login",
                        "in": "body",
                        "description": "User logged in with registered Email ID and Password",
                        "schema": {
                            "$ref": "#/definitions/login"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "New user is created"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },

        "/users/forget": {
            "post": {
                "tags": ["User Api's"],
                "description": "forget Password...",
                "parameters": [
                    {
                        "name": "Forget Password",
                        "in": "body",
                        "description": "Enter the email Id that you have forgotten the password of..",
                        "schema": 
                        {
                            "$ref": "#/definitions/forget"
                        }
                    }
                ],
                "produces": 
                [
                    "application/json"
                ],
                "responses": 
                {
                    "201": 
                    {
                        "description": "New user is created"
                    },
                    "500": 
                    {
                        "description": "Internal server error"
                    }
                }
            }
        },

        "/notes": {
            "post": {
                "tags": ["Note Api's"],
                "description": "Create Notes",
                "parameters": [
                    {
                        "name": "CREATE NOTES",
                        "in": "body",
                        "description": "Note created",
                        "schema": 
                        {
                            "$ref": "#/definitions/createNote"
                        }
                    }
                ],
                "produces": 
                [
                    "application/json"
                ],
                "responses": 
                {
                    "201": 
                    {
                        "description": "New user is created"
                    },
                    "500": 
                    {
                        "description": "Internal server error"
                    }
                }
            }   
        }
    },

    "definitions": {
        "SignUP": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },

        "login":{
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        
        "forget":{
            "type": "object",
            "properties": {
                "emailID": {
                    "type": "string"
                }
            }
        },

        "createNote": {
            "type": "object",
            "properties": {
                "Title": {
                    "type": "string"
                },
                "Descreption": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                }
            }
        }
    }
}    
        
